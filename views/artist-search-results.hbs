<div class="artist-search-results">
  {{#each result}}
  <div>
    <div>
      <img class="album-img" src="{{images.0.url}}" alt="artist"/>
    </div>
  
    <div class="name-div">
      <h2 class="artist-name">{{name}}</h2>
      <a href="/albums/{{id}}" class="link-btn-albums">View albums</a>
    </div>
  </div>
  {{/each}}
</div>